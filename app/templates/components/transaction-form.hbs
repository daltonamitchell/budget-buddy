<form class="transaction-form" {{action "submitForm" on="submit"}}>
  <div class="form-group">
    <label>Name</label>
    {{input class="name_field" value=name}}
  </div>

  <div class="form-group">
    <label>Amount</label>
    {{input class="amount_field" type="number" value=amount}}
  </div>

  <div class="form-group">
    <label>Date</label>
    {{input class="date_field" value=date}}
  </div>

  <div class="form-group">
    <label>Frequency</label>
    {{input class="frequency_field" value=frequency}}
  </div>

  <div class="form-group">
    <label>End Date (optional)</label>
    {{input class="end_date_field" value=endDate}}
  </div>

  {{input class="submit" type="submit" value="Submit"}}
</form>
