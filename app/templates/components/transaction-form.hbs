<form class="transaction-form ui form" {{action "submitForm" on="submit"}}>
  <div class="field">
    <label>Name</label>
    {{input class="name_field" name="name" value=name}}
  </div>

  <div class="field">
    <label>Amount</label>
    {{input class="amount_field" name="amount" type="number" step="0.01" value=amount}}
  </div>

  <div class="field">
    <label>Date</label>
    {{input class="date_field" name="date" value=date}}
  </div>

  <div class="field">
    <label>Frequency</label>
    <select class="ui dropdown" name="frequency">
      <option value="">Select frequency</option>
      <option class="item" value="once">Once</option>
      <option class="item" value="daily">Daily</option>
      <option class="item" value="weekly">Weekly</option>
      <option class="item" value="bi-weekly">Bi-weekly</option>
      <option class="item" value="monthly">Monthly</option>
      <option class="item" value="yearly">Yearly</option>
    </select>
  </div>

  <div class="field">
    <label>End Date (optional)</label>
    {{input class="end_date_field" name="end_date" value=endDate}}
  </div>

  <button class="ui submit button" type="submit">Submit</button>
  <div class="ui error message"></div>
</form>
